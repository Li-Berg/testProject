<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <!-- 向tomcat 生命一个servlet -->
    <servlet>
        <servlet-name>demoServlet</servlet-name> <!-- servlet 别名 -->
        <servlet-class>com.example.servletDemo.DemoServlet</servlet-class> <!-- servlet 真是类路径 -->
    </servlet>

    <servlet>
        <servlet-name>loginServlet</servlet-name> <!-- servlet 别名 -->
        <servlet-class>com.libo.servlet.LoginServlet</servlet-class> <!-- servlet 真是类路径 -->
    </servlet>

    <!-- 向Tomcat 表明servlet的映射路径 即访问时的Path路径 -->
    <servlet-mapping>
        <servlet-name>demoServlet</servlet-name>
        <url-pattern>/demo.do</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>loginServlet</servlet-name>
        <url-pattern>/login.do</url-pattern>
    </servlet-mapping>

    <!-- 陪住filter -->
    <filter>
        <filter-name>filter1</filter-name>
        <filter-class>com.libo.filter.MyFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>filter1</filter-name>
        <!-- 通过路径对哪个资源请求和响应进行过滤 -->
        <url-pattern>/myServlet1.do</url-pattern>
        <!-- 通过指定servlet名来对资源请求和响应进行过滤 -->
        <servlet-name>demoServlet</servlet-name>
    </filter-mapping>
</web-app>